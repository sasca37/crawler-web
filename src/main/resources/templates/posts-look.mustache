<h1>게시글 조회</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}" readonly>
            </div>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{socialName}}" readonly>
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content" readonly>{{post.content}}</textarea>
            </div>
        </form>
            <a href="/posts/board" role="button" class="btn btn-secondary">취소</a>
            <a href="/posts/update/{{id}}" role="button" class="btn btn-primary">수정</a>

<!--        <button type="button" class="btn btn-primary" id="btn-update">수정</button>-->
